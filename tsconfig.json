{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "client/*": ["./src/client/*"],
      "server/*": ["./src/server/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules/**/*"]
}
