{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "client/*": ["./src/client/*"],
      "db/*": ["./src/db/*"],
      "server/*": ["./src/server/*"],
      "util/*": ["./src/util/*"]
    }
  },
  "include": ["src/**/*.*", "types/**/*.*"],
  "exclude": ["node_modules/**/*"]
}
